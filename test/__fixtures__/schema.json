{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "UID"
      }
    },
    "meta_title": {
      "type": "Text",
      "config": {
        "label": "Meta Title",
        "placeholder": "Optional - Override the publicly viewable page title"
      }
    },
    "meta_description": {
      "type": "Text",
      "config": {
        "label": "Meta Description",
        "placeholder": "Optional - One sentence description of the page's content"
      }
    },
    "parent": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["page"],
        "label": "Parent",
        "placeholder": "Optional - Parent of the page"
      }
    },
    "main": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "news_post": []
        },
        "choices": {
          "news_post": {
            "type": "Slice",
            "fieldset": "News Post",
            "description": "Use the News Post template and provide metadata",
            "icon": "rss_feed",
            "display": "list",
            "non-repeat": {
              "published_on": {
                "type": "Date",
                "config": {
                  "label": "Published On",
                  "placeholder": "Optional - Override the publication date"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "Body": {
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "images": [],
          "text": []
        },
        "choices": {
          "text": {
            "type": "Slice",
            "fieldset": "Text",
            "description": "Rich text with headings and links",
            "icon": "text_fields",
            "display": "list",
            "non-repeat": {
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, heading1, strong, em, hyperlink, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "Text",
                  "placeholder": "Text with formatting and rich content"
                }
              }
            },
            "repeat": {}
          },
          "images": {
            "type": "Slice",
            "fieldset": "Images",
            "description": "One or more images with optional captions",
            "icon": "burst_mode",
            "display": "grid",
            "non-repeat": {},
            "repeat": {
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 2000
                  },
                  "thumbnails": [
                    {
                      "name": "Mobile",
                      "width": "1000"
                    }
                  ],
                  "label": "Image"
                }
              },
              "caption": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Caption",
                  "placeholder": "Optional - Caption below image"
                }
              },
              "orientation": {
                "type": "Boolean",
                "config": {
                  "placeholder_false": "Vertical",
                  "placeholder_true": "Horizontal",
                  "default_value": false,
                  "label": "Orientation"
                }
              }
            }
          }
        }
      }
    }
  }
}
